//faça um algoritimo que leia um número e retorne como resposta se ele é par ou impar
programa {
  inteiro nun
  funcao inicio() {
    escreva("Digite um número: ")
    leia(nun)
    se(nun % 2 == 0)
    escreva(" o numero ",nun, " é par")
    senao
    escreva("o número ",nun," é impar")
    
  }
}

//EXERCICIO 1- Leia dois valores pelo teclado e imprima a soma
programa {
  //variaveis
  real num1, num2, soma
//inicio do programa
  funcao inicio() {
    escreva("Vamos somar dois numeros!","\n", "Escreva o primeiro Número: ")
    leia(num1)
    escreva("Escreva o segundo  Número: ")
    leia(num2)
    soma = num1 + num2
    escreva("A soma dos numeros é: ",soma)
    
  }
}

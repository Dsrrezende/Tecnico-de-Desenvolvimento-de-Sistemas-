//Leia um Número e retorne como resposta se ele é positivo, negativo ou zero
programa {
  real nun

  funcao inicio() {
    escreva("Digite um número: ")
    leia(nun)
    se(nun > 0)
    escreva("O número ",nun," é POSITIVO.")
    se (nun < 0)
    escreva("O Número ",nun," é NEGATIVO.")
    se(nun==0)
    escreva("Você digitou ",nun)
    

    
  }
}
